{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "removeComments": true,
    "strict": true,
    "target": "es2015"
  },
  "files": [
    "src/index.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
